{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "@application/base": ["./dist/application/base"],
      "@application/commands": [
        "./dist/application/commands"
      ],
      "@application/messages": [
        "./dist/application/messages"
      ],
      "@application/queries": ["./dist/application/queries"],
      "@core/base": ["./dist/core/base"],
      "@core/domain": [
        "./dist/core/domain"
      ],
      "@infrastructure/authorization": [
        "./dist/infrastructure/authorization"
      ],
      "@infrastructure/base": [
        "./dist/infrastructure/base"
      ],
      "@view/base": [
        "./dist/view/base"
      ]
    },
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve"
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
